<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_base_discount_form" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="name">view.partner.base.discount.form</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="discount_customer" invisible="0" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>