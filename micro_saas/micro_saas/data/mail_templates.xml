<odoo>
    <data noupdate="0">
        <!-- Expiration Notification Template -->
        <record id="mail_template_expiration_notification" model="mail.template">
            <field name="name">Docker Instance Expiration Notification</field>
            <field name="model_id" ref="micro_saas.model_odoo_docker_instance"/>
            <field name="email_from">${object.env.company.email or 'admin@yourdomain.com'}</field>
            <field name="email_to">${object.customer.email}</field>
            <field name="subject">Your Subscription Status Update</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.customer.name},</p>
                <p>Your subscription for instance ${object.name} requires attention. Please check your instance details.</p>
                <p>Best regards,<br/>Your Zoorya Team</p>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Storage Notification Template -->
        <record id="mail_template_storage_notification" model="mail.template">
            <field name="name">Docker Instance Storage Notification</field>
            <field name="model_id" ref="micro_saas.model_odoo_docker_instance"/>
            <field name="email_from">${object.env.company.email or 'admin@yourdomain.com'}</field>
            <field name="email_to">${object.customer.email}</field>
            <field name="subject">Your Storage Status Update</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.customer.name},</p>
                <p>The storage for your instance ${object.name} requires attention. Please check your instance details.</p>
                <p>Best regards,<br/>Your Zoorya Team</p>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_renewal_notification" model="mail.template">
            <field name="name">Docker Instance Renewal Notification</field>
            <field name="model_id" ref="micro_saas.model_odoo_docker_instance"/>
            <field name="email_from">${object.env.company.email or 'admin@yourdomain.com'}</field>
            <field name="email_to">${object.customer.email}</field>
            <field name="subject">Congratulations! Your Subscription Has Been Renewed</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.customer.name},</p>
                <p>Congratulations! Your subscription for instance ${object.name} has been renewed.</p>
                <p>New expiration date: ${object.expiration_date}</p>
                <p>Best regards,<br/>Your Zoorya Team</p>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>

    <record id="mail_template_instance_credentials" model="mail.template">
            <field name="name">Docker Instance Credentials Notification</field>
            <field name="model_id" ref="micro_saas.model_odoo_docker_instance"/>
            <field name="email_from">${object.env.company.email or 'no-reply@zoorya.com'}</field>
            <field name="email_to">${object.customer.email}</field>
            <field name="subject">Your Zoorya Instance Credentials - ${object.name}</field>
            <field name="body_html"><![CDATA[
                <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; color: #333;">
                    <div style="text-align: center;">
                        <!-- Zoorya Logo Placeholder (replace with actual URL if available) -->
                        <!-- Example: <img src="https://zoorya.com/logo.png" alt="Zoorya Logo" style="max-width: 200px;"> -->
                        <p style="font-size: 20px; font-weight: bold; color: #007bff;">Zoorya</p>
                    </div>
                    <hr style="border: 1px solid #007bff; margin: 20px 0;">
                    <p>Dear ${object.customer.name or 'Customer'},</p>
                    <p>Your Zoorya instance <strong>${object.name or 'N/A'}</strong> is ready! Below are your login credentials:</p>
                    <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
                        <tr>
                            <td style="padding: 10px; background-color: #f8f9fa; border: 1px solid #ddd; font-weight: bold;">Domain:</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">${object.domain_name or 'N/A'}</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px; background-color: #f8f9fa; border: 1px solid #ddd; font-weight: bold;">Email/Username:</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">${object.customer.email or 'N/A'}</td>
                        </tr>
                        <tr>
                            <td style="padding: 10px; background-color: #f8f9fa; border: 1px solid #ddd; font-weight: bold;">Password:</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">${object._context.get('password', 'Temporary Password Not Set')}</td>
                        </tr>
                    </table>
                    <p>Please log in using the credentials above and change your password as soon as possible to ensure the security of your account.</p>
                    <p>If you have any questions, feel free to contact our support team at <a href="mailto:support@zoorya.com" style="color: #007bff; text-decoration: none;">support@zoorya.com</a>.</p>
                    <p style="margin-top: 20px;">Best regards,<br/>The Zoorya Team</p>
                    <hr style="border: 1px solid #007bff; margin: 20px 0;">
                    <p style="font-size: 12px; color: #777; text-align: center;">
                        Â© 2025 Zoorya. All rights reserved.<br/>
                        <a href="https://zoorya.com" style="color: #007bff; text-decoration: none;">www.zoorya.com</a>
                    </p>
                </div>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>