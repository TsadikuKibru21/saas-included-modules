<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Cron job to check instance expiration daily -->
        <record id="cron_check_instance_expiration" model="ir.cron">
            <field name="name">Check Odoo Docker Instance Expiration</field>
            <field name="model_id" ref="model_odoo_docker_instance"/>
            <field name="state">code</field>
            <field name="code">model.check_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
     
  <record id="cron_compute_storage_usage" model="ir.cron">
    <field name="name">Compute Storage Usage for Odoo Docker Instances</field>
    <field name="model_id" ref="model_odoo_docker_instance"/>
    <field name="state">code</field>
    <field name="code">model._compute_storage_usage()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="nextcall">2025-03-08 00:00:00</field>
    <field name="numbercall">-1</field>
    <field name="doall">False</field>
    <field name="active">True</field>
</record>
    <record id="cron_daily_instance_backup" model="ir.cron">
            <field name="name">Daily Odoo Docker Instance Backup</field>
            <field name="model_id" ref="micro_saas.model_odoo_docker_instance"/>
            <field name="state">code</field>
            <field name="code">model.run_daily_backup()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field> <!-- Run indefinitely -->
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now())"/> <!-- Starts immediately, then daily -->
        </record>
    
    </data>
</odoo>