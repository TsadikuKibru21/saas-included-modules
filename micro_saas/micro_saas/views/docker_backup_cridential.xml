<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de treea para DockerComposeTemplate -->
        <record id="view_docker_backup_cridential_tree" model="ir.ui.view">
            <field name="name">docker.backup.cridential.tree</field>
            <field name="model">docker.backup.cridential</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ip_address"/>
                    <field name="user"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>
        <record id="view_docker_backup_cridential_form" model="ir.ui.view">
            <field name="name">docker.backup.cridential.form</field>
            <field name="model">docker.backup.cridential</field>
            <field name="arch" type="xml">
                <form>
                   
                    <sheet>
                        <group>
                           <field name="name"/>
                            <field name="ip_address"/>
                            <field name="user"/>
                            <field name="password" password="True"/>
                            <field name="is_active"/>
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


    
    </data>
</odoo>
