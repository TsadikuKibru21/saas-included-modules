<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_add_resource_wizard_form" model="ir.ui.view">
        <field name="name">add.resource.wizard.form</field>
        <field name="model">add.resource.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Resource Wizard">
                <group>
                    <field name="user"/>
                    <field name="storage"/>
                    <field name="cpu"/>
                    <field name="memory_ram"/>
                    <field name="network"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" confirm="Are you sure you want to proceed?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_add_resource_wizard" model="ir.actions.act_window">
        <field name="name">Add Resource</field>
        <field name="res_model">add.resource.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_add_resource_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
