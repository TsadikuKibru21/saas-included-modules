<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_update_expiration_wizard_form" model="ir.ui.view">
        <field name="name">update.expiration.wizard.form</field>
        <field name="model">update.expiration.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Expiration Date">
                <group>
                    <field name="instance_id" invisible="1"/>
                    <field name="expiration_date"/>
                </group>
                <footer>
                    <button name="action_update_expiration" string="Update" type="object" class="btn-primary" confirm="Are you sure you want to proceed?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open the Wizard -->
    <record id="action_update_expiration_wizard" model="ir.actions.act_window">
        <field name="name">Update Expiration Date</field>
        <field name="res_model">update.expiration.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_update_expiration_wizard_form"/>
    </record>
</odoo>