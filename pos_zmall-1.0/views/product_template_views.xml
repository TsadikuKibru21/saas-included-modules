<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add Zmall fields to product form view -->
        <record id="product_template_form_view_zmall" model="ir.ui.view">
            <field name="name">product.template.form.zmall</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Add Zmall section under sales tab -->
                <xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
                    <group name="zmall_integration" string="Zmall Integration">
                        <field name="zmall_product_id" readonly="0"/>
                        <!-- <field name="zmall_sync_date" readonly="1"/>
                        <field name="zmall_sync_status"/>
                        <field name="zmall_sync_message" readonly="1"/> -->
                    </group>
                </xpath>

                <!-- Add sync button in header -->
               
            </field>
        </record>

        <!-- Add Zmall fields to product tree view -->
        <record id="product_template_tree_view_zmall" model="ir.ui.view">
            <field name="name">product.template.tree.zmall</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="tree_price" position="after">
                    <field name="zmall_product_id" optional="show"/>
                    <!-- <field name="zmall_sync_status" optional="show"/> -->
                </field>
            </field>
        </record>

