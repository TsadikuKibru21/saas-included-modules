<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_etta.DeliveryOrdersScreen">
        <div class="delivery-screen screen h-100 d-flex flex-column bg-light">
            <!-- Header/Toolbar -->
            <header class="screen-header bg-white shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <!-- Left side buttons -->
                    <div class="d-flex gap-2">
                        <button t-if="state.detailIsShown" 
                                class="btn btn-primary d-flex align-items-center" 
                                t-on-click="() => this.partnerEditor.save()">
                            <i class="fa fa-floppy-o me-2"/>
                            <span t-if="!ui.isSmall">Save</span>
                        </button>
                        
                        <button class="btn btn-outline-secondary d-flex align-items-center" 
                                t-on-click="back">
                            <i class="fa fa-angle-left me-2"/>
                            <span t-if="!ui.isSmall">Back</span>
                        </button>
                    </div>

                    <!-- Center buttons -->
                    <div class="d-flex gap-2">
                        <button class="btn btn-info d-flex align-items-center" 
                                t-on-click="showDeliveryProductScreen">
                            <i class="fa fa-box me-2"/>
                            <span t-if="!ui.isSmall">Products</span>
                        </button>
                        
                        <button class="btn btn-info d-flex align-items-center" 
                                t-on-click="showDeliveryProductSync">
                            <i class="fa fa-sync me-2"/>
                            <span t-if="!ui.isSmall">Sync Products</span>
                        </button>
                    </div>

                    <!-- Right side buttons -->
                    <div class="d-flex gap-2">
                        <t t-if="state.detailIsShown and state.editModeProps.partner.id">
                            <button class="btn btn-outline-primary d-flex align-items-center" 
                                    t-on-click="goToOrders">
                                <i class="fa fa-shopping-cart me-2"/>
                                <span t-if="!ui.isSmall">Orders</span>
                            </button>
                            
                            <a t-att-href="partnerLink" 
                               class="btn btn-outline-secondary d-flex align-items-center" 
                               target="_blank">
                                <i class="fa fa-info-circle me-2"/>
                                <span t-if="!ui.isSmall">Details</span>
                            </a>
                        </t>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <div class="flex-grow-1 overflow-auto p-3">
                <t t-if="state.detailIsShown">
                    <!-- Detail view content here -->
                </t>
                <t t-else="">
                    <div class="card shadow-sm">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0">Customer</th>
                                        <th class="border-0">Total</th>
                                        <th class="border-0">Items</th>
                                        <th class="border-0">Status</th>
                                        <th class="border-0 text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="getMoves and getMoves.length >= 1">
                                        <t t-foreach="getMoves" t-as="order" t-key="order.zmall_order_id">
                                            <DeliveryOrderLine 
                                                order="order"
                                                selectedOrder="state.selectedOrder"
                                                CancelOrderButton.bind="CancelOrderButton"
                                                onClickOrder.bind="clickOrder"
                                                clickOrderLineEtta.bind="clickOrderLineEtta"
                                                onClickCartButton.bind="clickCartButton"
                                                handleaddposorder.bind="handleaddposorder"
                                            />
                                        </t>
                                    </t>
                                    <tr t-if="!getMoves or getMoves.length === 0">
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <i class="fa fa-inbox fa-2x mb-2 d-block"/>
                                            No delivery orders found
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>

</templates>





