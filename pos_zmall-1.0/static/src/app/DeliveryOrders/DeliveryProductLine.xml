<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.DeliveryProductLine">
        <tr class="product-line align-middle" t-att-data-id="props.order.category_id">
            <!-- Name and Price -->
            <td style="width: 30%">
                <div class="d-flex flex-column">
                    <span class="fw-bold mb-1">
                        <t t-esc="props.order.name or ''" />
                    </span>
                    <span class="badge bg-light text-dark">
                        <t t-esc="props.order.price or ''" />
                    </span>
                </div>
            </td>

            <!-- Items -->
            <td style="width: 40%">
                <t t-if="props.order and props.order.cart_items and props.order.cart_items.length > 0">
                    <div class="small">
                        <t t-foreach="props.order.cart_items" t-as="item" t-key="item.unique_id">
                            <div class="d-flex align-items-center mb-1">
                                <i class="fa fa-tag text-muted me-2"/>
                                <span class="text-truncate"><t t-esc="item.full_product_name"/></span>
                            </div>
                        </t>
                    </div>
                </t>
            </td>

            <!-- Visibility Status -->
            <td style="width: 30%" class="text-end">
                <button t-if="props.order.is_visible_in_store" 
                        t-on-click.stop="()=> this.handleOrderLineClick(props.order)" 
                        class="btn btn-sm btn-success">
                    <i class="fa fa-eye me-1"/>Visible
                </button>
                <button t-else="" 
                        t-on-click.stop="() => this.handleOrderLineClick(props.order)" 
                        class="btn btn-sm btn-secondary">
                    <i class="fa fa-eye-slash me-1"/>Hidden
                </button>
            </td>
        </tr>
    </t>
</templates>

