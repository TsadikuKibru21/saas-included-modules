<odoo>
    <record id="view_saas_product_form" model="ir.ui.view">
        <field name="name">saas.product.form</field>
        <field name="model">saas.product</field>
        <field name="arch" type="xml">
            <form string="SaaS Product">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="category_id" />
                        <field name="hardware_product_ids" widget="many2many_tags" />
                        <field name="software_product_id" />
                        <field name="features" />
                        <field name="image" widget="image" />
                        <field name="product_desc" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_saas_product_tree" model="ir.ui.view">
        <field name="name">saas.product.tree</field>
        <field name="model">saas.product</field>
        <field name="arch" type="xml">
            <tree string="SaaS Products">
                <field name="name" />
                <field name="software_product_id" />
            </tree>
        </field>
    </record>

    <record id="action_saas_product" model="ir.actions.act_window">
        <field name="name">SaaS Products</field>
        <field name="res_model">saas.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_saas_product_root" name="Saas"
        web_icon="zoorya_website_front,static/description/icon.png" />
        
    <menuitem id="menu_saas_product" parent="menu_saas_product_root" name="SaaS Products"
        action="action_saas_product" sequence="10" />

</odoo>