<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="install_view_form" model="ir.ui.view">
        <field name="name">install.odoo.view.form</field>
        <field name="model">install.odoo</field>
        <field name="arch" type="xml">
            <form string="Install Odoo">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="server" readonly="1"/>
                        </h1>
                                
                    </div>
                    <group>
                        <group>
                            <field name="version"/>
                            <field name="user" class="oe_inline"/>
                            
                        </group>
                        <group>
                                <field name="installed_path"/>
                              <field name="port"/>
                              <field name="service_name"/>
                               <field name="is_enterprise"/>
                              
                        </group>
                    </group>
                    <footer>
                        <button name="install" string="Install" type="object" class="oe_highlight" />
                        <button string="Cancel" class="oe_left oe_highlight" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
