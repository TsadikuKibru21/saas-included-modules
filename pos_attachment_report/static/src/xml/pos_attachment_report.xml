<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="A5InvoiceCheckbox" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'js_invoice')]" position="after">

         

            <button class="button a5-js_invoice btn btn-light btn-lg d-flex justify-content-between align-items-baseline w-100 w-md-50 lh-lg" 
                    t-att-class="{ 'highlight active': is_to_a5_invoice() }"
                    t-on-click="toggleIsToInvoiceA5">
                    <span><i class="fa fa-file-text-o me-2" />A5</span>
                    <i class="fa me-2" t-attf-class="{{ is_to_a5_invoice() ? 'fa-check-square text-action' : 'fa-square-o' }}" /> 
            </button>
            

        </xpath>
    </t>
</templates>
