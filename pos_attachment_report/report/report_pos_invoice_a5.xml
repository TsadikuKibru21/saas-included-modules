<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  
    <!-- Report Template -->
    <template id="report_pos_invoice_custom_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align: center">POS Invoice</h2>
                    
                    <t t-set="order" t-value="docs[0]"/>

                    <!-- Report Details -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <p><strong class="me-1">Order:</strong> <span t-field="order.name"/></p>
                            <p><strong class="me-1">Date:</strong> <span t-field="order.date_order" t-options='{"widget": "date"}'/></p>
                            <p><strong class="me-1">Customer:</strong> <span t-field="order.partner_id.name"/></p>
                        </div>
                        <div class="col-6">
                            <p><strong class="me-1">Session:</strong> <span t-field="order.session_id.name"/></p>
                            <p><strong class="me-1">Cashier:</strong> <span t-field="order.user_id.name"/></p>
                            <p><strong class="me-1">POS Config:</strong> <span t-field="order.config_id.name"/></p>
                        </div>
                    </div>

                    <!-- Order Lines -->
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Tax</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="order.lines" t-as="line">
                                <tr>
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td><span t-field="line.qty"/></td>
                                    <td><span t-field="line.price_unit" /></td>
                                    <td><span t-esc="', '.join(line.tax_ids.mapped('name'))"/></td>
                                    <td><span t-field="line.price_subtotal_incl" /></td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <!-- <td><strong t-esc="sum(line.tax_ids.mapped('amount') for line in order.lines)"/></td> -->
                                <td><strong t-esc="order.amount_total" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>

