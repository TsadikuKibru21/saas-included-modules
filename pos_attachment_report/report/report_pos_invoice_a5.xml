    <!-- Custom A5 Invoice Report -->
    <record id="report_pos_invoice_a5" model="ir.actions.report">
        <field name="name">POS Invoice A5</field>
        <field name="model">pos.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pos_attachment_report.report_pos_invoice_custom_template</field>
        <field name="report_file">pos_attachment_report.report_pos_invoice_custom_template</field>
        <field name="binding_model_id" ref="model_pos_order"/>
        <field name="binding_type">report</field>
        <!-- <field name="paperformat_id" ref="paperformat_a5"/> -->
    </record>

  

  
